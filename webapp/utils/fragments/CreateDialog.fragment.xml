<core:FragmentDefinition xmlns:mvc="sap.ui.core.mvc"
    xmlns:layout="sap.ui.layout"
    xmlns:form="sap.ui.layout.form"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:fiori="sap.ui.webc.fiori"
    xmlns:l="sap.ui.layout">

    <Dialog id="openDialog" title="{i18n>createButtonText}" contentWidth="40%">
        <content>
            <Label id="_IDGenLabel1" text="{i18n>IDText}"/>
            <Input id="_IDGenInput1" value="{mProduct>/Product/ID}" placeholder="{i18n>IDTextExample}"></Input>

            <Label id="_IDGenLabel22" text="{i18n>productNameText}"/>
            <Input id="_IDGenInpu22" value="{mProduct>/Product/PRODUCTNAME}" placeholder="{i18n>productNameTextExample}"></Input>

            <Label id="_IDGenLabel222" text="{i18n>descriptionText}"/>
            <Input id="_IDGenInpu222" value="{mProduct>/Product/PRODUCTDESCRIPTION}" placeholder="{i18n>descriptionTextExample}"></Input>

            <Label id="_IDGenLabel2" text="{i18n>priceText}"/>
            <Input id="_IDGenInpu2" value="{mProduct>/Product/PRODUCTPRICE}" placeholder="{i18n>priceTextExample}"></Input>

            <Label id="_IDGenLabel3" text="{i18n>ratingText}"/>
            <Input id="_IDGenInpu3" value="{mProduct>/Product/PRODUCTRATING}" placeholder="{i18n>ratingTextExample}"></Input>
        </content>

        <buttons>
            <Button id="_IDGenButton1" text="{i18n>save}" press=".openCreateProductDialog" type="Success" class="sapUiMarginBottom"></Button>
            <Button id="_IDGenButton2" text="{i18n>cancel}" press=".closeCreateProductDialog" type="Negative" class="sapUiMarginBottom"></Button>
        </buttons>

    </Dialog>
</core:FragmentDefinition>