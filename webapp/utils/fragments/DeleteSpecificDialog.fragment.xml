<core:FragmentDefinition xmlns:mvc="sap.ui.core.mvc"
    xmlns:layout="sap.ui.layout"
    xmlns:form="sap.ui.layout.form"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:fiori="sap.ui.webc.fiori"
    xmlns:l="sap.ui.layout">

    <Dialog id="openDeleteSpecificDialog" title="{i18n>deleteButtonText}" contentWidth="40%">
        <content>
            <Label id="_IDGenLabel12" text="{i18n>IDText}"/>
            <Input id="_IDGenInput12" value="{mProduct>/Product/ID}" placeholder="{i18n>IDTextExample}"></Input>
        </content>

        <buttons>
            <Button id="_IDGenButton12" text="{i18n>save}" press=".openDeleteSpecificProductDialog" type="Success" class="sapUiMarginBottom"></Button>
            <Button id="_IDGenButton22" text="{i18n>cancel}" press=".closeDeleteSpecificProductDialog" type="Negative" class="sapUiMarginBottom"></Button>
        </buttons>

    </Dialog>
</core:FragmentDefinition>